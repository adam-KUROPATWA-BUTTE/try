<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="gui.controllers.MainMenuController" 
            styleClass="main-menu" 
            prefWidth="1400" prefHeight="900">
    
    <center>
        <VBox alignment="CENTER" spacing="30">
            <padding>
                <Insets top="50" right="50" bottom="50" left="50"/>
            </padding>
            
            <!-- Title -->
            <Label text="Armorique" styleClass="main-menu-title">
                <font>
                    <Font size="48" />
                </font>
            </Label>
            
            <Label text="Invasion &amp; Lycanthropes" styleClass="main-menu-title">
                <font>
                    <Font size="32" />
                </font>
            </Label>
            
            <Region minHeight="30" />
            
            <!-- Menu Buttons -->
            <VBox alignment="CENTER" spacing="15">
                <Button text="New Game" onAction="#onNewGame" styleClass="menu-button" minWidth="250"/>
                <Button text="Settings" onAction="#onSettings" styleClass="menu-button" minWidth="250"/>
                <Button text="Exit" onAction="#onExit" styleClass="menu-button" minWidth="250"/>
            </VBox>
            
            <Region minHeight="50" />
            
            <!-- Version Info -->
            <Label text="Version 1.0" style="-fx-font-size: 12px; -fx-text-fill: #8b7355;"/>
        </VBox>
    </center>
    
</BorderPane>
